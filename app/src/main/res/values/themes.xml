<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UnsplashApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/black</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <item name="colorPrimaryInverse">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
<!--        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/white</item>
        <item name="colorTertiary">@color/black</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="colorTertiaryContainer">@color/black</item>
        <item name="colorOnTertiaryContainer">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/roboto_flex</item>
    </style>

    <style name="Theme.Loading" parent="Theme.SplashScreen.IconBackground" >
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.UnsplashApp</item>
    </style>

</resources>